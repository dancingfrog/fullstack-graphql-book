{
  "name": "fullstack-graphql-book",
  "version": "0.0.1",
  "author": "John Hall",
  "description": "https://github.com/dancingfrog/fullstack-graphql-book",
  "license": "MIT",
  "main": "index.ts",
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@neo4j/graphql": "^3.15.0",
    "apollo-server": "^3.7.0",
    "ava": "^5.1.1",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "neo4j-driver": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "ava": "^5.1.1",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "start": "npm run ts src/index.ts",
    "test": "npm run test:integration",
    "test:integration": "ava --config integration-tests.config.cjs",
    "test:unit": "ava",
    "ts": "npm install ts-node && ts-node"
  }
}
